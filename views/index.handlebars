

{{> latest_comment this }}

<div id="content" class="home">


	<div class="center">

		{{#if images}}

			<div id="home-gallery" class="panel panel-default">
			
				<h2 class="heading-line"><span>All Images</span></h2>
				
				<div class="tile-section">


					{{#each images}}
						<a class="a-tile" href="/images/{{ uniqueID }}" style="background-image: url('/public/upload/{{filename}}');">
							<button class="cta-btn remove-image" data-image-id="{{ uniqueID }}" data-ajax-url="/images/{{ uniqueID }}/remove">
								<i class="fa fa-trash-o"></i>
							</button>
						</a>

						
					{{/each}}
				</div>
			</div>

		{{/if}}


		{{#if userName}}

			<div id="upload-form">
				
				<form method="post" action="/images" enctype="multipart/form-data">
					
					<fieldset>

						<legend>Upload</legend>

						<div class="inner">

							<div class="left">

								<div class="form-row">
									<label class="form-label" for="title">
										Title:
										<div>
											<input class="form-control" type="text" name="title">
										</div>
									</label>
								</div>

								<div class="form-row">
									<label class="form-label" for="description">
										Description:
										<div>
											<textarea class="form-control" name="description" rows="2"></textarea>
										</div>
									</label>
								</div>
								
							</div>

							<div class="right">
								<div class="form-row">

									<label class="form-label">
										Browse FIles:
										<div class="outer">
											<span class="browse-box">
												<span class="inner">
													<i class="fa fa-upload"></i>
												</span>
											</span>
										</div>
										<input class="form-control file" type="file" name="file" 
											accept="image/jpeg,image/pjpeg,image/gif,image/png">
									</label>
								</div>
							</div>

							<div class="clear"></div>


							<div class="sub-row">
								<button type="submit" id="login-btn" class="cta-btn" type="button">
									<span>
										<i class="fa fa-cloud-upload "></i> 
										Upload Image
									</span>
								</button>
							</div>
							
						</div>{{!-- end inner --}}

					</fieldset>

				</form>{{!-- end form --}}

			</div>


		{{/if}}
		
	</div>

